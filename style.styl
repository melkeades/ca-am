html.lenis
  height auto   /*
  // BLOG MAIN ----------------------------------------------------------------
  .blog-hero__img:not([src='']), .blog-card__img:not([src=''])
    background-image none !important
  
  // BLOG POST --------------------------------
  .blog-post__cover
    display block !important
  
  .blog-post__cover:not([src=''])
    background-image none !important
  */
  // BLOG MAIN ----------------------------------------------------------------

.lenis.lenis-smooth
  scroll-behavior auto

.lenis.lenis-smooth [data-lenis-prevent]
  overscroll-behavior contain

.lenis.lenis-stopped
  overflow hidden

.lenis.lenis-scrolling iframe
  pointer-events none

.blog-card__title, .blog-card-wrapin
  transition-duration 0.4s
  // transition text-decoration 0.4s !important
  text-decoration underline solid transparent !important

.blog-card__title:hover, .blog-card-wrapin:hover
  // transition text-decoration 0.4s !important
  text-decoration underline solid currentColor !important

.blog-card-wrapin, .blog-card-wrapin:hover, .blog-hero__video-wrap, .blog-hero__video-wrap:hover
  transition-duration 0.4s

  .blog-card__img__play-btn
    transition-duration inherit

  svg
    transition-duration 1s

.blog-card-wrapin:hover, .blog-hero__video-wrap:hover
  .blog-card__img__play-btn
    background white

    svg
      color black

:root
  margin 0
  background white
  --primary-color #ffa756

html
  --blog-hero__img-outline-width calc(100% - 10px)
  --about-progress 10%

.progress-line__bar
  width var(--about-progress)

.approach-sec__topnav__item--active a
  color white !important

.map__dot--active
  .map__dot__line
    opacity 1 !important
    width 1px
    transition-duration 0.1s

.map__fg-img
  transform translateZ(0)

.blog-post__share svg
  color black
  transition-duration 0.3s

  &:hover
    color var(--primary-color)

@media screen and (min-width 992px)
  .map-sec__card::before, .features-sec__img-wrap::before, .blog-hero__img-wrap::before
    position absolute
    content ''
    width calc(100% - 30px)
    height calc(100% - 30px)
    border-radius 16px
    top 60px
    left 60px
    z-index -1 !important
    border 3px solid var(--primary-color)

  .features-sec__img-wrap::before
    z-index 10 !important

  .features-sec__item.is-reversed
    .features-sec__info
      margin-left auto !important

    .features-sec__img-wrap
      margin-right 100px !important

  .blog-hero__img-wrap::before
    width var(--blog-hero__img-outline-width)

@media screen and (max-width 991px)
  .map-sec__cards-wrapin
    // height 360px !important
    width 400px !important

  .map-sec__cards
    // display block

  .map-sec__card-wrap
    // width 370px !important

  .map__dot__line
    display none

@media screen and (min-width 479px)
  .about-sec
    height 100vh !important

  // .about-sec__slider
  .about-sec__slide
    height 100% !important

@media screen and (max-width 478px)
  .map-sec__cards-wrapin
    width 100% !important

  .about-sec__slider
    overflow visible !important

.intro-sec__video iframe
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  pointer-events none

.map__fg-img-wrap img
  width 100% !important
  height auto !important

@media (max-aspect-ratio 16 / 9)
  .intro-sec__video iframe
    height 300%
    top -100%

@media (min-aspect-ratio 16 / 9)
  .intro-sec__video iframe
    width 300%
    left -100%

input, input:focus, textarea:focus, select:focus, *:focus
  border none

/* Portrait */
@media screen and (min-height 320px) and (max-height 460px) and (min-width 568px) and (max-width 991px)
  .h1
    font-size 44px !important

  .video-hero__dim
    padding-bottom 40px !important

  .intro-sec__card
    grid-row-gap 20px !important

  .about-card
    padding 40px !important
    grid-gap 1px !important

  .about-sec__progress
    display none !important

  .connect-mod__fg
    padding 20px !important

  .connect-mod__form, .connect-mod__info
    grid-row-gap 0px !important

  .form-wrap
    grid-column-gap 15px !important
    grid-row-gap 5px !important

  .form__input-1x3-wrap
    align-self stretch !important
    flex-basis 21% !important

  .form__label
    margin-bottom 0 !important
    font-size 12px !important

  .form__input
    height 40px !important

  .form__input-1x1-wrap
    align-self stretch
    flex-basis 26% !important