:root
  margin 0
  background #372d4e

.approach-sec__topnav__item--active a
  color white !important

.map__dot--active
  .map__dot__line
    opacity 1 !important
    width 1px
    transition-duration 0.1s

.map__fg-img
  transform translateZ(0)

@media screen and (min-width 992px)
  .map-sec__card::before, .features-sec__img-wrap::before
    position absolute
    content ''
    width calc(100% - 30px)
    height calc(100% - 30px)
    border-radius 16px
    top 60px
    left 60px
    z-index -1 !important
    border 3px solid #FFA756

  .features-sec__img-wrap::before
    z-index 10 !important

  .features-sec__item.is-reversed
    .features-sec__info
      margin-left auto !important

    .features-sec__img-wrap
      margin-right 100px !important

@media screen and (max-width 991px)
  .map-sec__cards-wrapin
    // height 360px !important
    width 400px !important

  .map-sec__cards
    // display block

  .map-sec__card-wrap
    // width 370px !important

  .map__dot__line
    display none

@media screen and (max-width 478px)
  .map-sec__cards-wrapin
    width 100% !important